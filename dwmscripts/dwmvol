#!/bin/sh

# Prints the current volume or üîá if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- ;;
	3) notify-send "üì¢ Volume module" "\- Shows volume üîä, üîá if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"
# Arbitrary but unique message tag
 msgTag="myvolume"
#
# If muted, print üîá and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo Û∞ùü && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ÔÄ® " ;;
	$((vol >= 30)) ) icon="ÔÄß " ;;
	$((vol >= 1)) ) icon="ÔÄ¶ " ;;
	* ) echo Û∞ùü && exit ;;
    #dunstify -a "changeVolume" -u low -i audio-volume-muted -h string:x-dunst-stack-tag:$msgTag "Volume muted" && exit ;;
esac

echo "$icon$vol%"

dunstify -a "changeVolume" -u low -i audio-volume-high -h string:x-dunst-stack-tag:$msgTag \
-h int:value:"$vol" "Volume: ${vol}%"

# canberra-gtk-play -i audio-volume-change -d "changeVolume"
